          </div>
          <a href="https://codepen.io/pec-man" class="expandHome">Contact</a>
        </div>
      </nav>
    <div class="shadow-lg p-4 mb-5 form">
      <div class="card">
        <div class="card-body">
          <form class="" action="/form" method="post">
            <div class="form-group">
              <label>Title</label>
              <input type="text" class="form-control" placeholder="Enter title" name= "postTitle">
              <small  class="form-text text-muted">Enter your title.</small>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Image URL</label>
              <input type="text" class="form-control"  placeholder="Enter ImageURL" name = "postImageurl">
              <small id="emailHelp" class="form-text text-muted">Enter your Image url.</small>
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Content</label>
              <textarea class="form-control" rows="3" placeholder="Enter Content" name = "postContent"></textarea>
            </div>
            <button type="submit" class="btn">Submit</button>
          </form>
        </div>
      </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="index.js" charset="utf-8"></script>
  </body>
